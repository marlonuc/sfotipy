//variables
dark_gray = #333333
light_gray = #818181
red = #BD255B
lighter_gray = #E5E5E5

//oocss classes U
.relative
	position relative
a 
	text-decoration none
	
.border-bottom
	border-bottom 1px solid light_gray
	
.center-block
	margin 0 auto
	
.center-text
	text-align center
	
.right-text
	text-align right
	
.padding
	padding 1em
	
.padding-tb
	padding 1em 0

.left
	float left
	
.right
	float right

.wrap
	width 1000px

.round
	border-radius 50%
	overflow hidden
img
	vertical-align top
	
ul
	margin 0
	padding 0
	

//estilos
body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
.playing
	&.small
		width 20em
		
.actions
	background rgba(black,.3)
	position absolute
	bottom 0
	left 0
	right 0
	
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color light_gray
.header
	height 3.5em
	
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.button-menu
	color dark_gray
	left .5em
	margin-top -10px
	position absolute
	top 50%

.menu
	display none
	
.container
	padding 1.4rem
	font-size 0
	text-align center
	
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin 0 1em 1em 0
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
	
.name
	color dark_gray
	
.author
	color light_gray
	
.figure
	margin 0
	
.progress
	margin 1em 0 
	position relative
	.min 
	.max
		font-size .8rem
		top -5px
		position absolute
	.min
		left 0
	.max
		right 0
	.total
		background light_gray
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background red
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 10s state infinite linear
	.circle
		background dark_gray
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite

.input
	border 1px solid light_gray
	height 2.1em
	border-radius 5px
	padding 0 1em 0 2em

.search-icon
	position absolute
	left .5em
	top .7em
	color dark_gray

.close-icon
	position absolute
	top .4em
	color dark_gray
	right .5em
	font-size 1.2em	
	
.playlist
	display none
	width 22em
	padding 0 2em
	border-left 1px solid light_gray
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em
.isotipo
	width 122px		
		
.logo
	display none
	padding 1.3em 0
	overflow hidden
	background white
		
.avatar
	width 38px
	height 38px
	margin-left .5em
		
.username
	color light_gray
	position relative
	top 9px
	margin-left .5em
	&:after
		content ""
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid light_gray
		display inline-block
		margin-left .4em
		
//animaciones
@keyframes state
	0%
		//background red
		width 0
	100%
		//background blue
		width 100%

@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0

//media queries
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	
	.image
		img
			width 100%
			height auto
			
	.playing
		&.medium
			width auto
			

@media screen and (min-width:1000px)

	.body
		background lighter_gray
		
	.button-menu
		display none
		
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	
	.menu
		display block
		overflow hidden
		border-top 1px solid light_gray
		
		.item
			float left
			list-style none
			
			a
				color dark_gray
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid dark_gray

	.music
		width 32.5em
		float left
		.description
			display none
			
	.header
		height auto
		border none
		.title
			display none
	
	.playlist
	.logo
		display block
	
		
	
	
			

	
		
	